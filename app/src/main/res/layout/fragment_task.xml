<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Broadcaster"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_sent_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent: 0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:max="100"
            android:progress="0"
            android:layout_marginBottom="20dp"
            android:progressTint="#FF9800" />

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Only logs button left -->
            <Button
                android:id="@+id/btn_view_logs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="View Logs"
                android:textColor="#FFFFFF"
                android:backgroundTint="#666666"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- STEP-BY-STEP FETCH/SEND SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT FIRESTORE SMS TASK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_fetch_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number: "
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_fetch_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content: "
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_fetch_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Fetch Next"
            android:backgroundTint="#009688"
            android:textColor="#FFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_send_single"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Send SMS"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp"/>

        <!-- DEBUG -->
        <TextView
            android:id="@+id/tv_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug: Ready"
            android:textColor="#888888"
            android:textSize="12sp"
            android:padding="12dp"
            android:background="#FFF3E0"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView>